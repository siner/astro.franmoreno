---
const { title, url, github } = Astro.props
import Button from './elements/button.astro'
---

<div
  class="rounded flex flex-col justify-between overflow-hidden shadow-lg p-4 border border-gray-300"
>
  <h2 class="text-2xl font-bold mb-5">{title}</h2>
  <div class="mb-4">
    <slot />
  </div>
  <div class="flex gap-2">
    {
      url && (
        <Button url={url}>
          <div class="flex gap-2">
            <img src={'/svg/chrome.svg'} alt="Chrome" class="w-4" />
            <span>Ver web</span>
          </div>
        </Button>
      )
    }
    {
      github && (
        <Button url={github}>
          <div class="flex gap-2">
            <img src={'/svg/github.svg'} alt="Github" class="w-4" />
            <span>Github</span>
          </div>
        </Button>
      )
    }
  </div>
</div>
