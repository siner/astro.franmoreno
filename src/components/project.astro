---
const { title, url, github } = Astro.props
import Button from './elements/button.astro'
---

<div
  class="rounded flex flex-col justify-between overflow-hidden shadow-lg p-4 border border-gray-300"
>
  <h2 class="text-2xl font-bold mb-5">{title}</h2>
  <div class="mb-4">
    <slot />
  </div>
  <div class="flex gap-2">
    {
      url && (
        <Button url={url}>
          <i class="devicon-chrome-plain" />
          Ver web
        </Button>
      )
    }
    {
      github && (
        <Button url={github}>
          <i class="devicon-github-plain" />
          Github
        </Button>
      )
    }
  </div>
</div>
