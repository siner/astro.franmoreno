---
import { RESUME_DATA } from '../data/resume'

const title = `${RESUME_DATA.name} | ${RESUME_DATA.about}`
const description = RESUME_DATA.summary
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style is:global>
      @media print {
        * {
          -webkit-print-color-adjust: exact !important;
          print-color-adjust: exact !important;
        }

        @page {
          size: A4;
          margin: 1.5cm;
        }

        body {
          margin: 0;
          padding: 0;
          background: white !important;
        }

        .print-hidden {
          display: none !important;
        }

        .print-visible {
          display: flex !important;
        }

        /* Contenedor principal */
        main {
          padding: 0 !important;
          margin: 0 !important;
          max-width: 100% !important;
        }

        /* Evitar saltos de página en lugares incorrectos */
        section {
          page-break-inside: avoid;
        }

        h2 {
          page-break-after: avoid;
          margin-top: 1rem !important;
          margin-bottom: 0.75rem !important;
        }

        /* Cards de experiencia y educación */
        .experience-card,
        .education-card {
          page-break-inside: avoid;
          margin-bottom: 0.5rem !important;
          padding: 0.75rem !important;
          border: 1px solid #e5e7eb !important;
        }

        /* Proyectos en grid */
        .projects-grid {
          display: grid !important;
          grid-template-columns: 1fr 1fr !important;
          gap: 0.5rem !important;
          page-break-inside: avoid;
        }

        .project-card {
          page-break-inside: avoid;
          padding: 0.5rem !important;
          border: 1px solid #e5e7eb !important;
        }

        /* Skills más compactos */
        .skills-container {
          display: flex !important;
          flex-wrap: wrap !important;
          gap: 0.25rem !important;
        }

        .skill-badge {
          padding: 0.125rem 0.5rem !important;
          font-size: 0.7rem !important;
          background-color: #1f2937 !important;
          color: white !important;
          border-radius: 0.25rem !important;
        }

        /* Header más compacto */
        .header-section {
          margin-bottom: 1rem !important;
        }

        .avatar-print {
          width: 5rem !important;
          height: 5rem !important;
        }

        /* Reducir espaciado general */
        section {
          margin-bottom: 1rem !important;
          padding-top: 0 !important;
          padding-bottom: 0 !important;
        }

        /* Badges más pequeños */
        .badge {
          font-size: 0.65rem !important;
          padding: 0.125rem 0.375rem !important;
        }

        /* Textos más compactos */
        p,
        div {
          line-height: 1.3 !important;
        }

        /* Links visibles */
        a[href]:after {
          content: '';
        }
      }
    </style>
  </head>
  <body class="bg-white">
    <!-- Botón descargar PDF - solo visible en pantalla -->
    <div class="fixed bottom-6 right-6 print-hidden z-50">
      <button
        onclick="window.print()"
        class="flex items-center gap-2 rounded-full bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg hover:bg-indigo-500 transition-all duration-200 hover:scale-105"
        aria-label="Descargar CV en PDF"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
          ></path>
        </svg>
        Descargar PDF
      </button>
    </div>

    <main
      class="container relative mx-auto overflow-auto p-4 md:p-16 print:p-12"
    >
      <section
        class="mx-auto w-full max-w-2xl space-y-8 bg-white print:space-y-6"
      >
        <!-- Header -->
        <div class="header-section flex items-center justify-between">
          <div class="flex-1 space-y-1.5">
            <h1 class="text-2xl font-bold">{RESUME_DATA.name}</h1>
            <p class="max-w-md text-pretty font-mono text-sm text-gray-600">
              {RESUME_DATA.about}
            </p>
            <p
              class="max-w-md items-center text-pretty font-mono text-xs text-gray-600"
            >
              <a
                class="inline-flex gap-x-1.5 align-baseline leading-none hover:underline"
                href={RESUME_DATA.locationLink}
                target="_blank"
              >
                <svg
                  class="size-3"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"
                  ></path>
                  <path d="M2 12h20"></path>
                </svg>
                {RESUME_DATA.location}
              </a>
            </p>
            <!-- Contact buttons - hidden on print -->
            <div
              class="flex gap-x-1 pt-1 font-mono text-sm text-gray-600 print-hidden"
            >
              {
                RESUME_DATA.contact.email && (
                  <a
                    href={`mailto:${RESUME_DATA.contact.email}`}
                    class="inline-flex size-8 items-center justify-center rounded-md border border-gray-300 hover:bg-gray-50"
                  >
                    <svg
                      class="size-4"
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <rect width="20" height="16" x="2" y="4" rx="2" />
                      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                    </svg>
                  </a>
                )
              }
              {
                RESUME_DATA.contact.tel && (
                  <a
                    href={`tel:${RESUME_DATA.contact.tel}`}
                    class="inline-flex size-8 items-center justify-center rounded-md border border-gray-300 hover:bg-gray-50"
                  >
                    <svg
                      class="size-4"
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                    </svg>
                  </a>
                )
              }
              {
                RESUME_DATA.contact.social.map((social) => (
                  <a
                    href={social.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex size-8 items-center justify-center rounded-md border border-gray-300 hover:bg-gray-50"
                  >
                    {social.name === 'GitHub' && (
                      <svg
                        class="size-4"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                      >
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                      </svg>
                    )}
                    {social.name === 'LinkedIn' && (
                      <svg
                        class="size-4"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                      >
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                      </svg>
                    )}
                    {social.name === 'X' && (
                      <svg
                        class="size-4"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                      >
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                      </svg>
                    )}
                  </a>
                ))
              }
            </div>
            <!-- Contact info - visible only on print -->
            <div
              class="hidden flex-col gap-x-1 font-mono text-sm text-gray-600 print-visible"
            >
              {
                RESUME_DATA.contact.email && (
                  <a href={`mailto:${RESUME_DATA.contact.email}`}>
                    <span class="underline">{RESUME_DATA.contact.email}</span>
                  </a>
                )
              }
              {
                RESUME_DATA.contact.tel && (
                  <a href={`tel:${RESUME_DATA.contact.tel}`}>
                    <span class="underline">{RESUME_DATA.contact.tel}</span>
                  </a>
                )
              }
            </div>
          </div>

          <img
            class="size-28 rounded-full avatar-print"
            alt={RESUME_DATA.name}
            src={RESUME_DATA.avatarUrl}
          />
        </div>

        <!-- About -->
        <section>
          <h2 class="text-xl font-bold mb-3">Acerca de mi</h2>
          <p class="text-pretty font-mono text-sm text-gray-600">
            {RESUME_DATA.summary}
          </p>
        </section>

        <!-- Work Experience -->
        <section>
          <h2 class="text-xl font-bold mb-3">Experiencia laboral</h2>
          <div class="space-y-3">
            {
              RESUME_DATA.work.map((work) => (
                <div class="experience-card rounded-lg border border-gray-200 p-4">
                  <div class="space-y-2">
                    <div class="flex items-center justify-between gap-x-2 text-base">
                      <h3 class="inline-flex items-center justify-center gap-x-1 font-semibold leading-none">
                        <a class="hover:underline" href={work.link}>
                          {work.company}
                        </a>
                        <span class="inline-flex gap-x-1">
                          {work.badges.map((badge) => (
                            <span class="badge inline-flex items-center rounded-md bg-gray-100 px-2 py-1 text-xs font-medium text-gray-900">
                              {badge}
                            </span>
                          ))}
                        </span>
                      </h3>
                      <div class="text-sm tabular-nums text-gray-500">
                        {work.start} - {work.end || 'Presente'}
                      </div>
                    </div>
                    <h4 class="font-mono text-sm leading-none">{work.title}</h4>
                  </div>
                  <div class="mt-2 text-xs text-gray-600">
                    {work.description}
                  </div>
                </div>
              ))
            }
          </div>
        </section>

        <!-- Education -->
        <section>
          <h2 class="text-xl font-bold mb-3">Educación</h2>
          <div class="space-y-3">
            {
              RESUME_DATA.education.map((education) => (
                <div class="education-card rounded-lg border border-gray-200 p-4">
                  <div class="flex items-center justify-between gap-x-2 text-base">
                    <h3 class="font-semibold leading-none">
                      {education.school}
                    </h3>
                    <div class="text-sm tabular-nums text-gray-500">
                      {education.start} - {education.end}
                    </div>
                  </div>
                  <div class="mt-2 text-sm">{education.degree}</div>
                </div>
              ))
            }
          </div>
        </section>

        <!-- Skills -->
        <section>
          <h2 class="text-xl font-bold mb-3">Skills</h2>
          <div class="skills-container flex flex-wrap gap-1">
            {
              RESUME_DATA.skills.map((skill) => (
                <span class="skill-badge inline-flex items-center rounded-md bg-gray-900 px-2 py-1 text-xs font-medium text-white">
                  {skill}
                </span>
              ))
            }
          </div>
        </section>

        <!-- Projects -->
        <section>
          <h2 class="text-xl font-bold mb-3">Proyectos</h2>
          <div class="projects-grid grid grid-cols-1 gap-3 sm:grid-cols-2">
            {
              RESUME_DATA.projects.map((project) => (
                <div class="project-card flex flex-col overflow-hidden rounded-lg border border-gray-200 p-3">
                  <div class="space-y-2">
                    <div class="space-y-1">
                      <h3 class="text-base font-semibold">
                        {project.link ? (
                          <a
                            href={project.link.href}
                            target="_blank"
                            class="inline-flex items-center gap-1 hover:underline"
                          >
                            {project.title}
                            <span class="size-1 rounded-full bg-green-500" />
                          </a>
                        ) : (
                          project.title
                        )}
                      </h3>
                      {project.link && (
                        <div class="hidden font-mono text-xs underline print:block">
                          {project.link.label}
                        </div>
                      )}
                      <p class="font-mono text-xs text-gray-600">
                        {project.description}
                      </p>
                    </div>
                  </div>
                  <div class="mt-auto flex">
                    <div class="mt-2 flex flex-wrap gap-1">
                      {project.techStack.map((tag) => (
                        <span class="badge inline-flex items-center rounded-md bg-gray-100 px-1 py-0 text-[10px] font-medium text-gray-900">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </section>
      </section>
    </main>
  </body>
</html>
