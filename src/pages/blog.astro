---
import Layout from '../layouts/Layout.astro'
const posts = await Astro.glob('../pages/blog/**/*.mdx')
posts.sort(
  (a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date)
)

import Post from '../components/post.astro'
---

<Layout title="Blog - Fran Moreno" description="Blog de Fran Moreno">
  <div class="container mx-auto mt-10">
    <h1 class="text-4xl font-bold mb-5">Blog</h1>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {
        posts.map((post) => (
          <Post
            url={'/blog/' + post.frontmatter.slug}
            img={'/blog/' + post.frontmatter.image}
            title={post.frontmatter.title}
            date={post.frontmatter.pubDate}
          />
        ))
      }
    </div>
  </div>
</Layout>

