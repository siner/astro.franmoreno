---
import Layout from './Layout.astro'

import '../styles/globals.css'

const { title, description, pubDate, image } = Astro.props
const date = new Date(pubDate)
---

<Layout title={title} description={description} image={image} type="blog">
  <article class="mt-10">
    <div class="mx-auto prose lg:prose-xl dark:prose-invert">
      <h1>{title}</h1>
      {image && <img src={image} alt={title} />}
      {pubDate && <time>🗓️ {date.toLocaleDateString()}</time>}
      <hr />
      <slot />
    </div>
  </article>
</Layout>
